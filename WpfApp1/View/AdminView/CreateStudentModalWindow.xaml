<Window x:Class="WpfApp1.View.AdminView.CreateStudentModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View.AdminView"
        mc:Ignorable="d"
        Title="Добавление студента" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel Width="200" VerticalAlignment="Center">
        <Label Content="Логин" />
        <TextBox x:Name="LoginTextBox" />

        <Label Content="Пароль" />
        <TextBox x:Name="PasswordTextBox" />

        <Label Content="Имя" />
        <TextBox x:Name="FirstNameTextBox" />

        <Label Content="Фамилия" />
        <TextBox x:Name="LastNameTextBox" />

        <Label Content="Название группы" />
        <TextBox x:Name="GroupNameTextBox" />

        <Button Content="Добавить студента" Margin="10" Click="RegisterStudentButton_Clicked" />
    </StackPanel>
</Window>
